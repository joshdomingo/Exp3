#include<iostream>
#include<conio.h>
#include<string.h>
using namespace std;

int main ()
{

	int size,i,j;
	char arr[100], rev[100];
	
	cout << "Enter your characters: ";
	cin >> arr;
	
	size = strlen(arr);
	
	for (i = 0, j = size ; i <= size ; i++, j--)
    	{
        	 rev[j] = arr[i];
    	}
	cout << "\nRevese order: ";
    	
    for ( i=0 ; i<= size ; i++)
    {
		cout<<rev[i] << ' ';
    }
    
    cout << "\n\nSize of the array: " << size;
    
	_getch();
	return 0;	
}
